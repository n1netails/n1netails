<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
       http://www.liquibase.org/xml/ns/dbchangelog
       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="00020-create-table-notification-config" author="jules">
        <createTable tableName="notification_config">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="token_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_notification_config_token"
                             referencedTableName="n1ne_token" referencedColumnNames="id"/>
            </column>
            <column name="platform" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="details" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="00020-create-table-user-notification-preference" author="jules">
        <createTable tableName="user_notification_preference">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_user_notification_preference_user"
                             referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="platform" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
